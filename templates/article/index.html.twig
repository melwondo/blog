{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Tags</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{% for tag in article.tags %}
                <li class="badge badge-pill badge-info">{{ tag.name }} </li>
            {% else %}
                <li>No tags for this article</li>
            {% endfor %}</td>
                <td>{{ article.category.name }}</td>
                <td>
                    <a href="{{ path('article_show', {'slug': article.slug}) }}">show</a>
                    <a href="{{ path('article_edit', {'slug': article.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
